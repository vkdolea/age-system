            {{#each data.favHonor as |item|}}
            <li>
                {{> "systems/age-system/templates/partials/itemcontrols/honorifics.hbs" item=this config=../data.config}}
            </li>
            {{#unless @last}}
            <hr>
            {{/unless}}
            {{/each}}
            {{/if}}

            {{#if data.favMembership}}
            <li class="list-sub-header colorset-second-tier">{{localize "ITEM.TypeMembership"}}</li>
            {{#each data.favMembership as |item|}}
            <li>
                {{> "systems/age-system/templates/partials/itemcontrols/membership.hbs" item=this config=../data.config}}
            </li>
            {{#unless @last}}
            <hr>
            {{/unless}}
            {{/each}}
            {{/if}}
        </ul>

    </div>

</section>