{{!-- Main Tab --}}
<div class="flexrow general-aid-bar">
    {{!-- Initiative --}}
    <div class="resource item-list colorset-third-tier">
        <div class="title">{{localize "age-system.testThreshold"}}</div>
        <div class="values flexrow">
            <input class="value-data circle" type="number" name="system.advTestThreshold" value="{{data.system.advTestThreshold}}" data-dtype="Number" />
        </div>
        <div class="labels flexrow">
            <label>{{localize "age-system.total"}}</label>
        </div>
    </div>

    {{!-- All Out Attack --}}
    <div class="resource item-list colorset-third-tier">
        <div class="title">{{localize "age-system.allOutAttack"}}</div>
        <div class="values flexrow">
            <input class="value-data circle" type="number" name="system.allOutAttack.dmgBonus" value="{{data.system.allOutAttack.dmgBonus}}" data-dtype="Number" />
            <input class="value-data circle" type="number" name="system.allOutAttack.defensePenalty" value="{{data.system.allOutAttack.defensePenalty}}" data-dtype="Number" />
            <input type="checkbox" name="system.allOutAttack.active" {{checked data.system.allOutAttack.active}} class="checkbox"/>
        </div>
        <div class="labels flexrow">
            <label>{{localize "age-system.item.damage"}}/{{localize "age-system.armorPenalty"}}</label>
        </div>
    </div>

    {{!-- Defend --}}
    <div class="resource item-list colorset-third-tier feature-controls" data-guardup-active="{{data.system.guardUp.active}}">
        <div class="title">{{localize "age-system.defendManeuver"}}</div>
        <div class="values flexrow">
            <input class="value-data circle" type="number" name="system.defend.defenseBonus" value="{{data.system.defend.defenseBonus}}" data-dtype="Number" />
            <input type="checkbox" class="defend-maneuver" name="system.defend.active" {{checked data.system.defend.active}} class="checkbox"/>
        </div>
        <div class="labels flexrow">
            <label>{{localize "age-system.defense"}}</label>
        </div>
    </div>

    {{!-- Guard Up --}}
    <div class="resource item-list colorset-third-tier feature-controls" data-defend-active="{{data.system.defend.active}}">
        <div class="title">{{localize "age-system.guardUp"}}</div>
        <div class="values flexrow">
            <input class="value-data circle" type="number" name="system.guardUp.defenseBonus" value="{{data.system.guardUp.defenseBonus}}" data-dtype="Number" />
            <input class="value-data circle" type="number" name="system.guardUp.testPenalty" value="{{data.system.guardUp.testPenalty}}" data-dtype="Number" />
            <input type="checkbox" class="guardup-maneuver" name="system.guardUp.active" {{checked data.system.guardUp.active}} class="checkbox"/>
        </div>
        <div class="labels flexrow">
            <label>{{localize "age-system.defense"}}/{{localize "age-system.armorPenalty"}}</label>
        </div>
    </div>

</div>

<section class="char-main-section flexrow">
    <ul class="abilities-column">
        {{!-- Attributes' Blocks --}}
        {{#each data.config.abilities as |name type|}}
        <li class="ability-box box {{type}} {{#if (isempty ../data.focus type)}}no-focus{{/if}}">
            <div class="abl-header flexrow colorset-first-tier feature-controls" data-abl-id="{{type}}">
                <div class="abl-name">
                    <label class="roll-ability feature-controls" data-abl-id="{{type}}" for="data.abilities.{{type}}.value"><a>{{name}}</a></label>
                </div>
                <input type="checkbox" name="system.abilities.{{type}}.primary" {{#with (lookup ../data.system.abilities [type])~}}{{#if primary}}checked{{/if}}{{/with}} class="primary-secondary" />
                <input type="checkbox" name="system.abilities.{{type}}.lastUp" {{#with (lookup ../data.system.abilities [type])~}}{{#if lastUp}}checked{{/if}}{{/with}} class="last-up" />
                {{!-- Value with modifiers applied --}}
                <input type="number" class="abl-value total colorset-second-tier" disabled name="system.abilities.{{type}}.total" value="{{#with (lookup ../data.system.abilities [type])~}}{{total}}{{/with}}" data-dtype="Number" />
                <input type="number" class="abl-value original" name="system.abilities.{{type}}.value" value="{{#with (lookup ../data.system.abilities [type])~}}{{value}}{{/with}}" data-dtype="Number" />
            </div>
            <p class="owned-focus">
                {{#each ../data.focus as |item|}}
                {{#if (eq item.system.useAbl type)}}
                <a class="item-name item-box focus-options feature-controls colorset-third-tier roll-item{{#if item.system.improved}} improved-focus{{/if}}" data-item-id="{{item._id}}" data-roll-type="{{../../data.config.ROLL_TYPE.FOCUS}}">
                    {{item.name}}
                </a>
                {{/if}}
                {{/each}}
            </p>
        </li>
        {{/each}}
    </ul>

    <div>
        <div class="flexrow">
            {{!-- Initiative --}}
            <div class="resource item-list colorset-third-tier">
                <div class="title">{{localize "age-system.initiative"}}</div>
                <div class="values flexrow">
                    <input class="value-data circle" disabled type="number" name="system.initiative" value="{{data.system.initiative}}" data-dtype="Number" />
                    <input class="value-data circle" type="number" name="system.initiativeMod" value="{{data.system.initiativeMod}}" data-dtype="Number" />
                </div>
                <div class="labels flexrow">
                    <label>{{localize "age-system.total"}}</label>
                    <label for="">{{localize "age-system.mod"}}</label>
                </div>
            </div>

            {{!-- Aim --}}
            <div class="resource item-list colorset-third-tier">
                <div class="title">{{localize "age-system.aim"}}</div>
                <div class="values flexrow">
                    <input class="value-data circle" type="number" name="system.aim.value" value="{{data.system.aim.value}}" data-dtype="Number" />
                    <input type="checkbox" name="system.aim.active" {{checked data.system.aim.active}} class="checkbox"/>
                </div>
                <div class="labels flexrow">
                    <label>{{localize "age-system.mod"}}</label>
                </div>
            </div>

        </div>

        <ul class="resource item-group favourite colorset-third-tier">
            <li class="header title colorset-first-tier">
                {{localize "age-system.quickAccess"}}
            </li>
            {{#if data.favWeapon}}
            <li class="list-sub-header colorset-second-tier">{{localize "ITEM.TypeWeapon"}}</li>
            {{#each data.favWeapon as |item|}}
            <li>
                {{> "systems/age-system/templates/partials/itemcontrols/weapon.hbs" item=this config=../data.config}}
            </li>
            {{#unless @last}}
            <hr>
            {{/unless}}
            {{/each}}
            {{/if}}

            {{#if data.favPower}}
