                {{> "systems/age-system/templates/partials/itemcontrols/power.hbs" item=this config=../data.config}}
            </li>
            {{#unless @last}}
            <hr>
            {{/unless}}
            {{/each}}
            {{/if}}

            {{#if data.favEquip}}
            <li class="list-sub-header colorset-second-tier">{{localize "ITEM.TypeEquipment"}}</li>
            {{#each data.favEquip as |item|}}
            <li>
                {{> "systems/age-system/templates/partials/itemcontrols/equipment.hbs" item=this config=../data.config}}
            </li>
            {{#unless @last}}
            <hr>
            {{/unless}}
            {{/each}}
            {{/if}}

            {{#if data.favStunt}}
