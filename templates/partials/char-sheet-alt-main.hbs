            {{#each data.favStunt as |item|}}
            <li>
                {{> "systems/age-system/templates/partials/itemcontrols/stunts.hbs" item=this config=../data.config}}
            </li>
            {{#unless @last}}
            <hr>
            {{/unless}}
            {{/each}}
            {{/if}}

            {{#if data.favTalent}}
            <li class="list-sub-header colorset-second-tier">{{localize "ITEM.TypeTalent"}}</li>
            {{#each data.favTalent as |item|}}
            <li>
                {{> "systems/age-system/templates/partials/itemcontrols/talent.hbs" item=this config=../data.config}}
            </li>
            {{#unless @last}}
            <hr>
            {{/unless}}
            {{/each}}
            {{/if}}

            {{#if data.favRelation}}
            <li class="list-sub-header colorset-second-tier">{{localize "ITEM.TypeRelationship"}}</li>
            {{#each data.favRelation as |item|}}
            <li>
