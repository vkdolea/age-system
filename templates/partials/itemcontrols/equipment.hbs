{{!-- Equipment Item Details --}}
<li class="item-box drag-to-macro item-card flexrow feature-controls {{colorset}}" draggable="true" data-item-id="{{item._id}}">
    <div class="main-data flexrow">
        <img class="item-image" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
        <a class="item-show item-name">{{item.name}}{{#if (ne item.system.quantity 1)}} ({{item.system.quantity}}){{/if}}</a>
    </div>
    <div class="controls flexrow">
        <div class="flexcol item-qtd-control arrow-control">
            <a class="change-qtd" data-action="add"><i class="fa fa-chevron-up" aria-hidden="true"></i></a>
            <a class="change-qtd" data-action="remove"><i class="fa fa-chevron-down"aria-hidden="true"></i></a>
        </div>
        <div class="flexcol stacked-icons">
            <a class="item-control item-equip favorite{{#unless item.system.favorite}} not-equiped{{/unless}}" title="{{localize "age-system.quickAccess"}}"><i class="fas fa-star"></i></a>
            <a class="item-control item-equip{{#unless item.system.equiped}} not-equiped{{/unless}}" title="{{localize "age-system.settings.equip"}}"><i class="fas fa-shield-alt"></i></a>
        </div>
    </div>
</li>