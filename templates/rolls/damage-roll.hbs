<form class="age-system base-age-roll damage-roll colorset-selection {{colorScheme}}">
    <div class="feature-controls">

        <div class="flexcol roll-card regular-roll-card">

            <div>
                <div class="action-details colorset-first-tier">
                    <h3>{{flavor}}</h3>
                    {{#if flavor2}}
                    <h4>{{flavor2}}</h4>
                    {{/if}}
                </div>
                <div class="flexrow roll-mod total-roll">
                    <h3 class="line-header">{{localize "age-system.settings.totalRolled"}}</h3>
                    <h3 class="line-value">{{finalValue}}</h3>
                </div>

                {{#each diceTerms as |part key|}}
                {{#unless part.operator}}
                <div class="flexrow roll-mod">
                    <div class="line-header">{{part.options.flavor}}</div>
                    {{#if part.results}}
                    <div class="line-value">{{termOperator ../diceTerms key}}{{#each part.results as |die|}}{{die.result}}{{#unless @last}}, {{/unless}}{{/each}}</div>
                    {{else}}
                    <div class="line-value">{{termOperator ../diceTerms key}}{{part.total}}</div>
                    {{/if}}
                </div>
                {{/unless}}
                {{/each}}
                {{#if wGroupPenalty}}
                <div class="flexrow roll-mod wgroup-penalty italic">
                    <div class="line-header">{{localize "SETTINGS.weaponGroups"}}</div>
                    <div class="line-value">รท2</div>
                </div>
                {{/if}}
                
            </div>

            <div class="age-chat-buttons flexcol">
                {{!-- <button class="age-button resist-damage">
                    <i class="fa fa-shield-alt" aria-hidden="true"></i>
                </button> --}}
                <button class="age-button apply-damage gm-only">
                    <i class="fa fa-crosshairs" aria-hidden="true"></i>
                    {{#if useInjury}}
                    Resist Damage
                    {{else}}
                    {{localize "age-system.applyDamage"}}
                    {{/if}}
                </button>
            </div>
            
        </div>

        <div class="blind-roll-card flexcol roll-card">
            <div>
                <h3 class="action-details colorset-first-tier other-user-roll">
                    {{localize "age-system.chatCard.looseRoll" user=user.name }}
                </h3>
                <h3 class="action-details colorset-first-tier user-roll">
                    {{localize "age-system.blindRollSomeone"}}
                </h3>
                <div class="dice-show trait-test flexrow">
                    <i class="fas fa-question-circle fa-4x"></i>
                    <i class="fas fa-question-circle fa-4x"></i>
                    <i class="fas fa-question-circle fa-4x"></i>
                </div>
                <div class="roll-mod stunted blind-value">???</div>
            </div>
        </div>
    </div>
</form>
