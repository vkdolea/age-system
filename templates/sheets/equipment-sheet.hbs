<form class="{{cssClass}} age-system item equipment colorset-selection" autocomplete="off">

    <div class="sheet-content item-stats equipment">
        <div class="flexcol">
            {{#if inChat}}
            <div class="item-card-title colorset-first-tier" type="text">{{name}}</div>
            {{else}}
            <input name="name" class="item-card-title colorset-first-tier" type="text" value="{{item.name}}" placeholder="{{localize "age-system.item.name"}}"/>
            {{/if}}
            <div class="flexrow item-card-stats">
                
                {{!-- Item Image --}}
                {{> "systems/age-system/templates/partials/item-image-sheet-card.hbs"}} 
                
                {{!-- Purchase Test / Cost --}}
                <div class="flexcol">
                    {{> "systems/age-system/templates/partials/cost-resource-block.hbs"}}
                </div>

                {{!-- Quantity --}}
                <div class="flexcol">
                    <label>{{localize "age-system.item.quantity"}}</label>
                    <input type="number" {{#if inChat}}disabled{{/if}} name="data.quantity" value="{{data.data.quantity}}" data-dtype="Number" />
                </div>                
                {{!-- Weight --}}
                <div class="flexcol">
                    <label>{{localize "age-system.item.weight"}}</label>
                    <input type="text" {{#if inChat}}disabled{{/if}} name="data.weight" value="{{data.data.weight}}" data-dtype="Number" />
                </div>
            </div>

            {{!-- Active Bonuses --}}
            {{> "systems/age-system/templates/partials/active-bonuses.hbs"}}
            

            {{#if inChat}}
            {{!-- Description --}}
            <div class="item-card-desc">
                <label>{{localize "age-system.item.desc"}}</label>
                {{editor content=data.data.longDesc target="data.longDesc" button=true owner=owner editable=editable}}
            </div>
            {{/if}}

        </div>

        {{#if inChat}}
        {{else}}
        {{!-- Tab Control --}}
        {{> "systems/age-system/templates/partials/bonus-desc-sheet.hbs"}}
        {{/if}}
    </div>
    
</form>
