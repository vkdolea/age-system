<form class="{{cssClass}} age-system item stunts flexrow no-flexwrap" autocomplete="off">
    <aside class="sidebar metal-background colorset-first-tier">
        <img class="document-picture" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <ul class="item-summary">
            {{!-- Initial Value --}}
            <li>
                <label>{{localize "age-system.focusInput"}}</label>
                <input type="number" name="system.initialValue" value="{{system.initialValue}}" class="checkbox"/>
            </li>
            {{!-- Focus Final Value --}}
            <li>
                <label>{{localize "age-system.total"}}</label>
                <input type="number" disabled name="system.finalValue" value="{{system.finalValue}}" class="checkbox"/>
            </li>
            {{#if displayIsOrg}}
            {{!-- Is Organization Focus --}}
            <li>
                <label>{{localize "age-system.orgFocus"}}</label>
                <div class="flexcol flex-justify-around flex-align-center">
                    <input type="checkbox" name="system.isOrg" {{checked system.isOrg}} class="checkbox"/>
                </div>
            </li>
            {{/if}}
            {{!-- Improved Focus --}}
            <li>
                <label>{{localize "age-system.improvedFocus"}}</label>
                <div class="flexcol flex-justify-around flex-align-center">
                    <input type="checkbox" {{#if inChat}}disabled{{/if}} name="system.improved" {{checked system.improved}} class="checkbox"/>
                </div>
            </li>
            {{!-- Page Ref --}}
            <li class="feature-controls" data-reference="{{system.reference}}">
                <label class="find-reference {{#if config.pdfoundryOn}}mouse-to-pointer{{/if}}">{{localize "age-system.reference"}}</label>
                <input type="text" name="system.reference" {{#if inChat}}disabled{{/if}} value="{{system.reference}}" placeholder="Page Ref." data-dtype="String"/>
            </li>
        </ul>
    </aside>

    <div class="second-column flexcol">
        <header class="top-banner colorset-first-tier flexrow">
            <div class="header-details">
                <input class="itemname" name="name" type="text" value="{{item.name}}" placeholder={{localize "age-system.name"}}/>
                {{!-- Ability to activate item --}}
                <div class="sub-details flexrow">
                    <div class="flexcol minimum-length">
                        <select name="system.useAbl" class="header-input">
                            {{#select system.useAbl}}
                            <option value="no-abl">-</option>
                            {{#if system.isOrg}}
                            {{#each config.abilitiesOrg as |name type|}}
                            <option value="{{type}}">{{localize name}}</option>
                            {{/each}}
                            {{else}}
                            {{#each config.abilities as |name type|}}
                            <option value="{{type}}">{{localize name}}</option>
                            {{/each}}
                            {{/if}}
                            {{/select}}
                        </select>
                        <label class="label-under">{{localize "age-system.abl"}}</label>
                    </div>
                </div>
            </div>
        </header>
        
        <div class="sheet-main-content metal-background fill-space-height-100">
            <ul class="resource colorset-first-tier editor-parent">
                <li>
                    <label class="title">{{localize "age-system.item.desc"}}</label>
                </li>
                <li class="editor-parent">{{editor system.longDesc target="system.longDesc" button=true owner=owner editable=true engine="prosemirror"}}</li>
            </ul>
        </div>
    </div>
</form>